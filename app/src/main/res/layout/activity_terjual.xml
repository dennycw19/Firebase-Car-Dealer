<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Terjual">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:text="Kode Mobil"
            android:id="@+id/textViewTransaksiKodeBarangTrans"
            android:textSize="15sp"
            android:textColor="@color/hitam"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Tgl. Trans"
            android:id="@+id/textViewTransaksiTanggalTrans"
            android:textSize="15sp"
            android:textColor="@color/hitam"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="No. Fak"
            android:id="@+id/textViewTransaksiNoFakturTrans"
            android:textSize="15sp"
            android:textColor="@color/hitam"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Jml"
            android:id="@+id/textViewTransaksiJumlahJualTrans"
            android:textSize="15sp"
            android:textColor="@color/hitam"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Hrg"
            android:id="@+id/textViewTransaksiHargaJualTrans"
            android:textSize="15sp"
            android:textColor="@color/hitam"
            android:layout_weight="3"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Tot"
            android:id="@+id/textViewTransaksiTotalJualTrans"
            android:textSize="15sp"
            android:textColor="@color/hitam"
            android:layout_weight="3"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Status"
            android:id="@+id/textViewTransaksiStatus"
            android:textSize="15sp"
            android:textColor="@color/hitam"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:background="@color/hitam"/>

    <ListView
        android:id="@+id/listViewTransaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>